@using Identity.Areas.Admin.Models.User
@model UserDetailVM

<div class="user-detail-container">
    <div class="user-card">
        <h2 class="user-name">@Model.UserName</h2>
        <div class="user-info">
            <p><span class="label">Email:</span> @Model.Email</p>
            <p><span class="label">Country:</span> @Model.Country</p>
            <p><span class="label">City:</span> @Model.City</p>
        </div>
    </div>
</div>

<style>
    .user-detail-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #ffe6f0;
        padding: 20px;
    }

    .user-card {
        background: #ffffff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        max-width: 400px;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    .user-name {
        font-size: 1.8em;
        color: #ff3399;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .user-info p {
        margin: 10px 0;
        font-size: 1.1em;
        color: #333333;
    }

    .label {
        font-weight: bold;
        color: #cc0066;
    }
</style>
